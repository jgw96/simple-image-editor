{
  "name": "SimpleEdit",
  "display": "standalone",
  "start_url": "/",
  "short_name": "SimpleEdit",
  "theme_color": "#201f1e",
  "description": "Make quick, simple edits to any image!",
  "orientation": "any",
  "background_color": "#201f1e",
  "related_applications": [],
  "prefer_related_applications": false,
  "icons": [
    {
      "src": "assets/icons/maskable_icon.png",
      "sizes": "512x512",
      "purpose": "maskable"
    },
    {
      "src": "assets/icons/icon_256.png",
      "sizes": "256x256"
    },
    {
      "src": "assets/icons/icon_128.png",
      "sizes": "128x128"
    },
    {
      "src": "assets/icons/icon_64.png",
      "sizes": "64x64"
    },
    {
      "src": "assets/icons/icon_48.png",
      "sizes": "48x48"
    }
  ],
  "screenshots": [
    {
      "src": "assets/screenshots/screen1.png"
    },
    {
      "src": "assets/screenshots/screen2.png"
    },
    {
      "src": "assets/screenshots/screen2.png"
    }
  ],
  "features": [
    "Cross Platform",
    "fast",
    "simple"
  ],
  "categories": [
    "photo",
    "utilities"
  ],
  "shortcuts": [
    {
      "name": "Edit an Image",
      "short_name": "Start Editing",
      "description": "Start editing an image",
      "url": "/?q=edit",
      "icons": [
        {
          "src": "assets/icons/icon_256.png",
          "sizes": "256x256"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share/image/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "files": [
        {
          "name": "photos",
          "accept": [
            "image/jpeg",
            ".png",
            ".jpg"
          ]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "image/*": [
          ".png",
          ".jpg"
        ]
      }
    }
  ]
}